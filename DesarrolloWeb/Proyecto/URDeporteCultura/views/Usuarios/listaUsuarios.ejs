<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Usuarios</title>
    <link rel="stylesheet" href="/assets/css/mainStyles.css">
    <link rel="stylesheet" href="/assets/css/header.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=League+Spartan:wght@100..900&display=swap" rel="stylesheet">
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
</head>
<body>
    <%- include('../components/header.ejs') -%>
    <%- include('../components/menuNavegacion.ejs') -%>

    <div class="mainContainer">
        <div class="centeringContainer">
            <h1 class="tituloSeccion">Lista de Usuarios</h1>
            <table id="userTable">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Correo</th>
                        <th>ID</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    <% usuarios.forEach(usuario => { %>
                        <tr>
                            <td><%= usuario.nombre %></td>
                            <td><%= usuario.apellido %></td>
                            <td><%= usuario.correo %></td>
                            <td><a href="/usuarios/<%= usuario._id %>"><%= usuario.ids %></a></td>
                            <td><%= usuario.estado ? 'Activo' : 'Inactivo' %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <%- include('../components/footer.ejs') -%>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <!-- Initialize DataTables -->
    <script>
        $(document).ready(function() {
            $('#userTable').DataTable({
                paging: true, // Enable pagination
                searching: true, // Enable search
                info: true, // Show table information
                pageLength: 10, // Number of items per page
                lengthChange: true, // Allow changing the number of items per page
                language: {
                    search: "Buscar:",
                    paginate: {
                        next: "Siguiente",
                        previous: "Anterior"
                    },
                    emptyTable: "No hay usuarios disponibles",
                    zeroRecords: "No se encontraron resultados",
                }
            });
        });
    </script>
</body>
</html>